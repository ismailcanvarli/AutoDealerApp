<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimary"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/mainLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/tiny_margin"
                    android:stretchColumns="2">

                    <TableRow>

                        <TextView
                            android:id="@+id/brandTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/tiny_margin"
                            android:text="@string/brand"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/brandCardTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/tiny_margin"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/medium_text_size" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/modelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/tiny_margin"
                            android:text="@string/model"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/modelCardTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/tiny_margin"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/medium_text_size" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/colorTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/tiny_margin"
                            android:text="@string/color"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/colorCardTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/tiny_margin"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/medium_text_size" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/yearTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/tiny_margin"
                            android:text="@string/year"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/yearCardTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/tiny_margin"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/medium_text_size" />

                    </TableRow>


                </TableLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/mainLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/tiny_margin"
                    android:stretchColumns="2">

                    <TableRow>

                        <TextView
                            android:id="@+id/kilometerTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/tiny_margin"
                            android:text="@string/kilometer"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/kilometerCardTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/tiny_margin"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/medium_text_size" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/fuelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/tiny_margin"
                            android:text="@string/fuel"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fuelCardTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/tiny_margin"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/medium_text_size" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/gearboxTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/tiny_margin"
                            android:text="@string/gearbox"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/gearboxCardTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/tiny_margin"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/medium_text_size" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/priceTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/tiny_margin"
                            android:text="@string/price"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/priceCardTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/tiny_margin"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/medium_text_size" />

                    </TableRow>


                </TableLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/carEditTextView"
                android:layout_width="@dimen/_80dp"
                android:layout_height="@dimen/_40dp"
                android:layout_margin="@dimen/tiny_margin"
                android:background="@drawable/rounded_blue_button"
                android:gravity="center"
                android:text="@string/edit"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/carDeleteTextView"
                android:layout_width="@dimen/_80dp"
                android:layout_height="@dimen/_40dp"
                android:layout_margin="@dimen/tiny_margin"
                android:background="@drawable/rounded_red_button"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/medium_text_size" />


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>