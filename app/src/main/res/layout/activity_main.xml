<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/addCarButton"
        android:layout_width="132dp"
        android:layout_height="64dp"
        android:layout_marginTop="48dp"
        android:text="Add Car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showCarButton"
        android:layout_width="132dp"
        android:layout_height="64dp"
        android:layout_marginTop="40dp"
        android:text="Show Car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addCarButton" />

    <Button
        android:id="@+id/updateCarButton"
        android:layout_width="132dp"
        android:layout_height="64dp"
        android:layout_marginTop="40dp"
        android:text="Update Car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showCarButton" />

    <Button
        android:id="@+id/deleteCarButton"
        android:layout_width="132dp"
        android:layout_height="64dp"
        android:layout_marginTop="76dp"
        android:text="Delete Car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateCarButton" />

</androidx.constraintlayout.widget.ConstraintLayout>